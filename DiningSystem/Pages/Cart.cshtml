@page
@model DiningSystem.Pages.CartModel
@{
    ViewData["Title"] = "Your Cart";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Your Cart</h2>

    <form method="post" asp-page-handler="UpdateCart">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Menu Item</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.CartItems.Count; i++)
                    {
                        <tr class="text-light">
                            <td>@Model.CartItems[i].MenuItem</td>
                            <td>@Model.CartItems[i].Price</td>
                            <td>
                                <input type="hidden" name="CartItems[@i].ItemId" value="@Model.CartItems[i].ItemId" />
                                <div class="input-group">
                                    <input type="number" class="form-control" name="CartItems[@i].Quantity" value="@Model.CartItems[i].Quantity" min="1" />
                                </div>
                            </td>
                            <td>@(Model.CartItems[i].Price * Model.CartItems[i].Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <h4>Total Amount: @Model.TotalAmount</h4>
            </div>
            <div class="col-md-6 text-right">
                <button type="submit" class="btn btn-primary">Update Cart</button>
                <a class="btn btn-success" asp-page="/Checkout">Checkout</a>
            </div>
        </div>
    </form>
</div>
