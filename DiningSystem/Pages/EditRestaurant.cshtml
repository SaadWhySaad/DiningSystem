@page
@model DiningSystem.Pages.EditRestaurantModel
@{
}
<h2>Edit Restaurant</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Restaurant.r_name">Restaurant Name</label>
        <input asp-for="Restaurant.r_name" class="form-control" />
        <span asp-validation-for="Restaurant.r_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.r_description">Restaurant Description</label>
        <textarea asp-for="Restaurant.r_description" class="form-control"></textarea>
        <span asp-validation-for="Restaurant.r_description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.AdminUsername">Restaurant Admin</label>
        <input asp-for="Restaurant.AdminUsername" class="form-control" />
        <span asp-validation-for="Restaurant.AdminUsername" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.max_table_servings">Max People Serving Per Table</label>
        <input asp-for="Restaurant.max_table_servings" class="form-control" />
        <span asp-validation-for="Restaurant.max_table_servings" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.open_close_timings">Open/Close Timing</label>
        <input asp-for="Restaurant.open_close_timings" class="form-control" />
        <span asp-validation-for="Restaurant.open_close_timings" class="text-danger"></span>
    </div>
    <button type="submit" asp-page-handler="SaveRestaurant" class="btn btn-primary">Save</button>
</form>

<button class="btn btn-success" data-toggle="modal" data-target="#addMenuItemModal">Add Menu Item</button>

<!-- Modal for Adding Menu Item -->
<div class="modal fade" id="addMenuItemModal" tabindex="-1" role="dialog" aria-labelledby="addMenuItemModalLabel" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMenuItemModalLabel">Add Menu Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="AddMenuItem">
                    <div class="form-group">
                        <label asp-for="NewMenuItem.menu_item"></label>
                        <input asp-for="NewMenuItem.menu_item" class="form-control" />
                        <span asp-validation-for="NewMenuItem.menu_item" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewMenuItem.menu_description"></label>
                        <input asp-for="NewMenuItem.menu_description" class="form-control" />
                        <span asp-validation-for="NewMenuItem.menu_description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewMenuItem.menu_item_price"></label>
                        <input asp-for="NewMenuItem.menu_item_price" class="form-control" />
                        <span asp-validation-for="NewMenuItem.menu_item_price" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Item</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $('#addMenuItemModal').on('shown.bs.modal', function () {
            $('#NewMenuItem_menu_item').focus();
        });
    </script>
}