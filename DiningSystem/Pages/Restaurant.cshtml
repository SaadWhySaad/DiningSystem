@page
@model DiningSystem.Pages.UserModel
@{
}

<div class="search-container">
    <div class="search-box">
        <input type="text" id="searchInput" class="search-input" placeholder="Search..." oninput="searchContent()" />
        <i class="fa fa-search search-icon"></i>
    </div>
</div>


<div class="wrap">
@foreach (var item in Model.listRestaurant)
{
 
        <div class="box">
            <div class="box-top">
                <img class="box-image skeleton" src="/css/images/@(item.Image).jpg" alt="banner1" onerror="this.onerror=null;this.src='/css/images/fourth.jpg';">
                <div class="title-flex">
                    <h3 class="box-title">@item.r_name</h3>
                    <p class="user-follow-info">@item.timings</p>
                    <p class="user-follow-info">Max People Served Per Table: @item.max_people</p>
                </div>
                <p class="description">@item.r_description</p>
            </div>
            <a asp-route-id="@item.id" asp-page="/RestaurantMenu" class="button">Explore Menu</a>

        </div>
   
}
 
</div>





